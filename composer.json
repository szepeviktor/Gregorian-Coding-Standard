{
    "name": "szepeviktor/gregorian-coding-standard",
    "type": "phpcodesniffer-standard",
    "description": "Customized Gregorian style PSR-12",
    "license": "MIT",
    "require": {
        "php": "^7.1 || ^8.0",
        "squizlabs/php_codesniffer": "^3.5.3"
    },
    "suggest": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0"
    },
    "scripts": {
        "test:cs": "phpcs --standard=PHPCSDev GregorianCodingStandard/",
        "test:xml": "tests/xmllint.sh"
    },
    "require-dev": {
        "phpcsstandards/phpcsdevcs": "^1.0"
    }
}
